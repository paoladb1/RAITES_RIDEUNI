<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAITES_RIDEUNI.MVVM.View.CrearRaitePage"
             Title="CrearRaitePage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#A7C8FF" Offset="0.0"/>
            <GradientStop Color="#E3F0FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="Publica tu Raite"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#003E7E"
                   HorizontalOptions="Center"/>

            <Label Text="Punto de Origen" FontAttributes="Bold" TextColor="#003E7E"/>
            <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="False">
                <Entry Placeholder="Ubicacion actual" TextColor="Black" Text="{Binding Origen}" HeightRequest="50"/>
            </Frame>

            <Label Text="Destino" FontAttributes="Bold" TextColor="#003E7E"/>
            <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="False">
                <Entry Placeholder="A donde vas?" TextColor="Black" Text="{Binding Destino}" HeightRequest="50"/>
            </Frame>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50">
                    <DatePicker Date="{Binding FechaSalida}" TextColor="Black"/>
                </Frame>
                <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50" Grid.Column="1">
                    <TimePicker Time="{Binding HoraSalida}" TextColor="Black"/>
                </Frame>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50">
                    <Entry Placeholder="Asientos (Ej: 3)" TextColor="Black" Text="{Binding AsientosDisponibles}" Keyboard="Numeric"/>
                </Frame>
                <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="False" HeightRequest="50" Grid.Column="1">
                    <Entry Placeholder="Precio por asiento (MXN)" TextColor="Black" Text="{Binding PrecioPorAsiento}" Keyboard="Numeric"/>
                </Frame>
            </Grid>

            <Button Text="Publicar Raite Ahora"
                    HeightRequest="60"
                    BackgroundColor="Blue"
                    TextColor="white"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Command="{Binding PublicarCommand}"
                    HorizontalOptions="FillAndExpand">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="#E3F0FF"/>
                    </Trigger>
                </Button.Triggers>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
