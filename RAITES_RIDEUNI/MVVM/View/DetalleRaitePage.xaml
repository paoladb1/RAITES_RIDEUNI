<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAITES_RIDEUNI.MVVM.View.DetalleRaitePage"
             Title="DetalleRaitePage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7FB3FF" Offset="0.0"/>
            <GradientStop Color="#E9F2FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="15" Spacing="20">

                <Frame Padding="20" CornerRadius="15" BackgroundColor="#DDEBFF" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Costo: Usted puede brindar dinero al conductor si lo desea." 
                               FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="2 Asientos Disponibles" FontSize="16" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="15" CornerRadius="15" BackgroundColor="#DDEBFF" HasShadow="True">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Origen: Pueblo Yaqui" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                        <Label Text="Destino: UTS" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                        <BoxView HeightRequest="1" Color="Black"/>
                        <Label Text="Fecha y hora: Hoy, 7:00 AM" FontSize="16" TextColor="Black"/>
                        <Label Text="Llegada estimada: 8:15 AM" FontSize="16" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="15" CornerRadius="15" BackgroundColor="#DDEBFF" HasShadow="True">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Frame WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="#0077CC"/>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Conductora Pamela Lopez" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="4.8 de 25 viajes" FontSize="14" TextColor="Black"/>
                        </VerticalStackLayout>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ConductorInfo_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame Padding="15" CornerRadius="15" BackgroundColor="#DDEBFF" HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Pasajeros Confirmados (2)" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                        <HorizontalStackLayout Spacing="10">
                            <Frame WidthRequest="45" HeightRequest="45" CornerRadius="22.5" BackgroundColor="#0077CC"/>
                            <Frame WidthRequest="45" HeightRequest="45" CornerRadius="22.5" BackgroundColor="#0077CC"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
