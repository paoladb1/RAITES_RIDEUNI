<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAITES_RIDEUNI.MVVM.View.LoginPage"
             xmlns:vm="clr-namespace:RAITES_RIDEUNI.MVVM.ViewModel"
             Title="Iniciar Sesión">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#89CFF0" Offset="0.0"/>
            <GradientStop Color="#E0F7FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="INICIAR SESION"
               FontSize="24"
               TextColor="#003E7E"
               HorizontalOptions="Center" />

        <Entry Placeholder="Correo electronico"
               Keyboard="Email"
               TextColor="#003E7E"
               Text="{Binding Correo}" />

        <Entry Placeholder="Contrasena"
               IsPassword="True"
               TextColor="#003E7E"
               Text="{Binding Contraseña}" />

        <Button Text="Entrar"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="20"
                Command="{Binding IniciarSesionCommand}" />

    </VerticalStackLayout>

</ContentPage>
