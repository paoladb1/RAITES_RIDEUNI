<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAITES_RIDEUNI.MVVM.View.EditarPerfilPage"
             Title="Editar Perfil">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Editar Perfil"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#003E7E"
                   HorizontalOptions="Center"/>

            <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
            <Entry Placeholder="Rol" Text="{Binding Rol}" />
            <Entry Placeholder="Universidad" Text="{Binding Universidad}" />
            <Entry Placeholder="Grupo" Text="{Binding Grupo}" />
            <Picker Title="Disponible" SelectedItem="{Binding Disponible}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Si</x:String>
                        <x:String>No</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Editor Placeholder="DescripciÃ³n" Text="{Binding Descripcion}" HeightRequest="100"/>

            <Button Text="Guardar Cambios"
                    BackgroundColor="#005BBB"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding GuardarCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
