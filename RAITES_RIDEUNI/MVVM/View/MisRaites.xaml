<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RAITES_RIDEUNI.MVVM.View.MisRaites"
             Title="MisRaites">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7FB3FF" Offset="0.0"/>
            <GradientStop Color="#E9F2FF" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="AquÃ­ puedes ver que viajes has tenido"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#003E7E"
                   HorizontalOptions="Start"
                   Margin="0,10"/>

            <CollectionView ItemsSource="{Binding Rides}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="20"
                               Padding="15"
                               Margin="0,10"
                               BackgroundColor="White"
                               HasShadow="True">

                            <Grid ColumnDefinitions="*, Auto"
                                  VerticalOptions="Center">

                                <Label Text="{Binding}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#003E7E"
                                       LineBreakMode="TailTruncation"
                                       VerticalOptions="Center"/>

                                <Button Text="Eliminar"
                                        Grid.Column="1"
                                        BackgroundColor="#003BFF"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="45"
                                        WidthRequest="110"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarCommand}"
                                        CommandParameter="{Binding}"/>
                            </Grid>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
